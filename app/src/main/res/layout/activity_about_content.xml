<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="always"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:roundedCorners="top_left|top_right">

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer" />

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:orientation="vertical">

            <com.ost.application.ui.core.widget.CardView
                android:id="@+id/about_bottom_ost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:IconDrawable="@drawable/ost_logo"
                app:TitleText="@string/operating_system_tester" />

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_ui_design_developers" />

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:orientation="vertical">

            <com.ost.application.ui.core.widget.CardView
                android:id="@+id/about_bottom_dev_yann"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:IconDrawable="@drawable/about_page_avatar_yann"
                app:TitleText="Yanndroid" />

            <com.ost.application.ui.core.widget.CardView
                android:id="@+id/about_bottom_dev_salvo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:IconDrawable="@drawable/about_page_avatar_salvo"
                app:TitleText="Salvo Giangreco"
                app:isDividerViewVisible="true" />

            <com.ost.application.ui.core.widget.CardView
                android:id="@+id/about_bottom_dev_tribalfs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:IconDrawable="@drawable/about_page_avatar_tribalfs"
                app:TitleText="Tribalfs"
                app:isDividerViewVisible="true" />

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_source_licenses" />

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <com.ost.application.ui.core.widget.CardView
                android:id="@+id/about_bottom_oss_program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:TitleText="@string/open_source_program"
                app:SummaryText="Open source code of this application"/>

            <com.ost.application.ui.core.widget.CardView
                android:id="@+id/about_bottom_oss_apache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:TitleText="Apache License 2.0"
                app:SummaryText="androidx  •  material-components-android • sesl-androidx  •  sesl-material-components-android  •  lottie"
                app:isDividerViewVisible="true" />

            <com.ost.application.ui.core.widget.CardView
                android:id="@+id/about_bottom_oss_mit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:TitleText="MIT License"
                app:SummaryText="oneui-core  •  oneui-design"
                app:isDividerViewVisible="true" />

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        <dev.oneuiproject.oneui.widget.RelatedCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:title="@string/useful_links">

            <TextView
                android:id="@+id/about_bottom_relative_jetpack"
                style="@style/OneUI.RelativeLinkTextViewStyle"
                android:text="Android Jetpack" />

            <TextView
                android:id="@+id/about_bottom_relative_material"
                style="@style/OneUI.RelativeLinkTextViewStyle"
                android:text="Material Components" />

            <TextView
                android:id="@+id/about_bottom_relative_sesl_androidx"
                style="@style/OneUI.RelativeLinkTextViewStyle"
                android:text="SESL Android Jetpack (Unofficial)" />

            <TextView
                android:id="@+id/about_bottom_relative_sesl_material"
                style="@style/OneUI.RelativeLinkTextViewStyle"
                android:text="SESL Material Components for Android (Unofficial)" />

            <TextView
                android:id="@+id/about_bottom_relative_design6"
                style="@style/OneUI.RelativeLinkTextViewStyle"
                android:text="OneUI6 Design Lib" />" />

        </dev.oneuiproject.oneui.widget.RelatedCard>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>